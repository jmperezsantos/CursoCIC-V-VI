<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTextoPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otro_texto"
        android:textColor="@color/principal"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tvTextoSecundario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otro_texto"
        android:textColor="@color/secundario"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/etInputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/generic_placeholder"
        android:text="@string/initial_text"
        android:textColor="@color/principal"
        android:textColorHint="@color/secundario" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/principal"
        android:text="@string/button_text"
        android:textAllCaps="false"
        android:textColor="@color/secundario" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/swSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto Del Switch"
        app:thumbTint="@color/principal" />

    <CheckBox
        android:id="@+id/cbCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Check Box!!" />

    <RadioGroup
        android:id="@+id/rgOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona una opciÃ³n!!"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/rbUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/principal"
            android:text="UNO"
            android:textColor="@color/principal" />

        <RadioButton
            android:id="@+id/rbDos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/orange"
            android:checked="true"
            android:text="DOS"
            android:textColor="@color/orange" />

        <RadioButton
            android:id="@+id/rbTres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/secundario"
            android:text="TRES"
            android:textColor="@color/secundario" />
    </RadioGroup>

    <com.google.android.material.slider.Slider
        android:id="@+id/sSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stepSize="2"
        android:value="6"
        android:valueFrom="0"
        android:valueTo="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_cross" />

        <ImageButton
            android:id="@+id/ibImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/andy" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCallToSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/refresh_user"
        app:backgroundTint="#FF0000"
        app:maxImageSize="40dp"
        app:tint="@color/white" />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/pbProgress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:progress="25"
        android:progressTint="@color/orange" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/tucan" />

</LinearLayout>